{
    "name": "astandkaya/laravel-image-placeholder",
    "description": "A debug library for temporarily generating images.",
    "type": "library",
    "keywords": [],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "ImagePlaceholder\\": "src/ImagePlaceholder"
        },
        "files": [
            "src/ImagePlaceholder/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "ast."
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "symfony/var-dumper": "^7.3",
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^4.0",
        "psy/psysh": "^0.12",
        "pestphp/pest": "^4.1"
    },
    "scripts": {
        "test": "pest",
        "stan": "phpstan analyse",
        "cs": "phpcs ./",
        "cbf": "phpcbf ./",
        "c": [
            "@test",
            "@stan",
            "@cs"
        ],
        "psysh": "psysh"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
